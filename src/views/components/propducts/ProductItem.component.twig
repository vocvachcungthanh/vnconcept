<div class="product__item mb-20 relative transition duration-150 ease-out hover:ease-in  flex flex-col px-3 py-4 hover:shadow-[0px_8px_15px_rgba(0,0,0,0.15)]">
	<a href="#" class="w-6 h-6  flex items-center  justify-center absolute right-6 top-6 z-10">
		<img class="w-4" src="images/icons/icon__heart_2.svg" alt="icon__heart_2.svg">
	</a>
	{% if height %}
		<a href="{{link}}" class="flex items-center justify-center h-[720px]" title="{{title}}">
			<img src="images/{{thumbnail}}" alt="{{thumbnail}}" class="w-full h-full object-contain"/>
		</a>
	{% else %}
		<a href="{{link}}" class="flex items-center justify-center h-[260px]" title="{{title}}">
			<img src="images/{{thumbnail}}" alt="{{thumbnail}}" class="w-full h-full object-contain"/>
		</a>
	{% endif %}

	{% if card %}
		<div class="flex items-center mt-[22px]">
			<div class="item">
				<svg width="68" height="32" viewbox="0 0 68 32" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect x="15.9707" y="0.414214" width="22" height="22" rx="3" transform="rotate(45 15.9707 0.414214)" fill="#BFBFBF" stroke="white" stroke-width="2"/>
					<rect x="33.9062" y="0.414214" width="22" height="22" rx="3" transform="rotate(45 33.9062 0.414214)" fill="#868E96" stroke="white" stroke-width="2"/>
					<rect x="51.8438" y="0.414214" width="22" height="22" rx="3" transform="rotate(45 51.8438 0.414214)" fill="#424242" stroke="white" stroke-width="2"/>
				</svg>

			</div>
			<a href="" class="ml-auto text-[#212529] text-xs border border-[#BFBFBF] py-[5px] px-2 hover:bg-black hover:text-white">
				Thêm vào giỏ
			</a>
		</div>
	{% endif %}
	<a href="{{link}}" class="content pt-4 mb-4" title="{{title}}">
		<h3 class="product__title text-[#212529] text-sm mb-1">{{ title }}</h3>
		<p class="text-[#868E96] text-xs">{{ target }}</p>
	</a>
	<div class="mt-auto flex items-center gap-1">
		{% if sale %}
			<p class="text-sm text-[#868E96] line-through">
				{{sale}}
			</p>
		{% endif %}

		<p class=" text-sm">{{ price }}</p>
	</div>
</div>
