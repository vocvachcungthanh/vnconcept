{% extends "../layouts/master-layout.twig" %}
{% block titlePage %}
	vncpncept - Trang chủ
{% endblock %}
{% block content %}
	<div class="container">
		<div class="relative banner__home">
			<div class="relative pt-[38.334%] mt-[25px] overflow-hidden">
				<img src="images/banner__home.jpg" alt="banner__home.jpg" class="w-full object-cover absolute top-0 left-0 right-0 bottom-0">
			</div>
			<div class="p-[60px] absolute top-0 left-0 right-0  bottom-0 z-2">
				<h1 class="text-white font-black text-[40px] text-shadow">
					Làn gió mới cho
					<br>
					không gian sống của bạn!
				</h1>
			</div>
		</div>
		<div class="mt-[60px]">
			{% include "../components/TitleGlobal.component.twig" with { title:"Danh mục sản phẩm"} %}
			{% include "../components/ProductPortfolio.twig" %}
		</div>
		<div class="mt-[60px]">
			{% include "../components/TitleGlobal.component.twig" with { title:"Sofa bộ nhập khẩu châu Âu", link:"product.page.html"} %}
			{% include "../components/home/SofaImport.component.twig" %}
		</div>
		<div>
			{% include "../components/TitleGlobal.component.twig" with { title:"Sofa rời nhập khẩu châu Âu", link:"product.page.html"} %}
			<div class="grid grid-cols-3 gap-4  sofa-import mt-4">
				{% set
                products = [
                        {
                        id:1,
                        title:"Sofa Modena 2 seater",
                        target:"Gỗ sồi, Gỗ keo, Thép không gỉ",
                        price:"67.590.000",
                        thumbnail:"product__1.png",
                        link:"productDetail.page.html"
                    },
                    {
                        id:2,
                        title:"Sofa Modena 2 seater",
                        target:"Gỗ sồi, Gỗ keo, Thép không gỉ",
                        price:"67.590.000",
                        thumbnail:"product__2.png",
                        link:"productDetail.page.html"
                    },
                     {
                        id:3,
                        title:"Sofa Modena 2 seater",
                        target:"Gỗ sồi, Gỗ keo, Thép không gỉ",
                        price:"67.590.000",
                        thumbnail:"product__3.png",
                        link:"productDetail.page.html"
                    }
                    ] %}
				{% for product in products %}
					{% include "../components/propducts/ProductItem.component.twig" with {title:product.title, target:product.target, price:product.price, thumbnail:product.thumbnail, link:product.link}  %}
				{% endfor %}
			</div>

		</div>
		<div>
			{% include "../components/TitleGlobal.component.twig" with { title:"Thảm", link:"product.page.html"} %}
			<div class="grid grid-cols-2 gap-4 mt-4 carpet ">
				{% set
                products = [
                        {
                        id:1,
                        title:"Thảm sợi ngắn TN0001",
                        target:"Dạ, Sợi tự nhiên, Sợi tổng hợp ",
                        price:"7.590.000",
                        thumbnail:"carpet__1.png",
                        link:"productDetail.page.html"
                    },
                    {
                        id:2,
                        title:"Thảm lông xù TX0001",
                        target:"Dạ, Sợi tự nhiên, Sợi tổng hợp ",
                        price:"7.590.000",
                        thumbnail:"carpet__2.png",
                        link:"productDetail.page.html"
                    },

                    ] %}
				{% for product in products %}
					{% include "../components/propducts/ProductItem.component.twig" with {title:product.title, target:product.target, price:product.price, thumbnail:product.thumbnail, link:product.link}  %}
				{% endfor %}
			</div>

		</div>

		<div class="flex items-start flex-wrap mb-[140px]">
			<div class="flex-shrink-0 max-w-[389px] w-full">
				<h2 class="text-[#232323] font-semibold text-[32px]">
					Bộ sưu tập nội thất từ các nhà thiết kế
				</h2>
				<a class="transition-all hover:transition-all hover:bg-black text-base text-white mt-10 flex items-center justify-center max-w-[280px] w-full h-10 bg-[#232323]" href="#" title="Xem thêm">Xem thêm</a>
			</div>
			<div class="slide__album w-full pl-4">
				<div class="album ">
					{% for item in 1..3 %}
						<div class="album__item px-2">
							<a class="flex album__box relative overflow-hidden">
								<div class="album__image h-[400px] w-full">
									<img src="images/album__{{loop.index}}.png" alt="{{loop.index}}.jpg" class="w-full h-full object-cover">
								</div>
								<div class="album__footer flex items-center w-full text-white bg-[rgba(26,26,28,0.4)] absolute bottom-0 left-0 right-0 py-5 px-6 z-1">
									<h3 class="text-lg font-bold uppercase ">
										Bộ sưu tập 0{{loop.index}}
									</h3>
									<span class="album__total ml-auto text-sm ">
										20 sản phẩm
									</span>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block scriptPage %}
	<script type="text/javascript">
		$(document).ready(function () {
function album() {
$('.album').slick({
dots: false,
arrow: true,
infinite: true,
slidesToShow: 2,
slidesToScroll: 1,
autoplay: true
})
}
album()
})
	</script>
{% endblock %}
