<ul class="menu__addon flex justify-center items-center ml-[59.35px]">
	{% for menu in menus %}
		<li class="{{menu.status == pageStatus ? 'active' : ''}}">
			<a href="{{menu.link}}" title="{{menu.name}}" class="menu__link flex text-white text-transparent-unp uppercase text-base px-4 pt-[26px] pb-[22px]">
				{{menu.name}}
			</a>
			<div class="menu__omega absolute opacity-0 translate-y-5 left-0 right-0 top-full bg-white z-50 w-full shadow-[0px_8px_15px_rgba(0,0,0,0.15)] pt-6 pb-12">
				<div class="container">
					{% include "./addon-tab.twig" %}
				</div>
			</div>
		</li>
	{% endfor %}
</ul>
